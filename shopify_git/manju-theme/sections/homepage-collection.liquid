{% if section.settings.enable_featured_collection %}
<section id="latest" class="">
  <div class="white"></div>
  <div class="color"></div>
  {%- assign collection = collections[section.settings.collection] -%}
  <div class="container">
    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-12">
      <div class="row">
        <div id="mini-slider">
          {% for product in collection.products limit:6 %}
          {% include 'collection-grid-item' %} 
          {% else %}
          {% for i in (1..3) %}
          <div class="ms-slide active">
            <div class="ms-product">
              {% capture current %}{% cycle 1, 2, 3 %}{% endcapture %}
              {{ 'product-' | append: current | placeholder_svg_tag: 'placeholder-svg' }}
              <span class="name">{{ 'homepage.onboarding.product_title' | t }}</span>
              <span class="price">$19.19</span>
            </div>
          </div>
          {% endfor %}
          {% endfor %}

          <div id="ms-bullets"></div>

        </div>

      </div>
    </div>

    <div class="col-lg-7 col-md-7 col-sm-7 col-xs-12 col-lg-offset-1 col-md-offset-1 col-sm-offset-1 collection-desc">
      <h2>{{ section.settings.collection_title }}</h2>
      <p>{{ section.settings.collection_desc }}</p>

      <span class="our-brands">{{ section.settings.collection_brand_title }}</span>
      <ul class="collection-image">
        <li><img src="{{ section.settings.brand_image | img_url }}" alt="" class="brands-marks-img" /></li>
        <li><img src="{{ section.settings.brand_image1| img_url }}" alt="" class="brands-marks-img" /></li>
        <li><img src="{{ section.settings.brand_image2 | img_url }}" alt="" class="brands-marks-img" /></li>
        
      </ul>
      </div>
  </div>
</section>
{% endif %}
{% schema %}
  {
    "name": "Featured collection",
    "class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_featured_collection",
        "label": "Enable Featured Collection",
        "default": true
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Featured collection"
      },
      {
        "id": "collection",
        "type": "collection",
        "label": "Collection"
      },
      {
        "type": "text",
        "id": "collection_title",
        "label": "Collection Heading",
        "default": "Collection Heading"
      },
      {
        "type": "text",
        "id": "collection_desc",
        "label": "Collection Description",
        "default": "Collection Description"
      },
      {
        "type": "text",
        "id": "collection_brand_title",
        "label": "Collection Brand Title",
        "default": "Collection Brand Title"
      },
      {
        "type": "image_picker",
        "id": "brand_image",
        "label": "Brand Image"
      },
{
        "type": "image_picker",
        "id": "brand_image1",
        "label": "Brand Image"
      },
{
        "type": "image_picker",
        "id": "brand_image2",
        "label": "Brand Image"
      }
    ],
    "presets": [
      {
        "name": "Featured collection",
        "category": "Collection"
      }
    ]
  }
{% endschema %}

{% stylesheet %}
{% endstylesheet %}


{% javascript %}
$(document)
 .on( 'shopify:section:load', minload )
;
{% endjavascript %}

