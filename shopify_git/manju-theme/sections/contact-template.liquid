        "default": "Shipping Main Title 1"
       },
       {
        "type": "text",
        "id": "shipping_sub_text_1",
        "label": "Shipping Sub Title 1",
        "default": "Shipping Sub Title 1"
       },
       {
        "type": "text",
        "id": "shipping_main_text_2",
        "label": "Shipping Main Title 2",
        "default": "Shipping Main Title 2"
       },
       {
        "type": "text",
        "id": "shipping_sub_text_2",
        "label": "Shipping Sub Title 2",
        "default": "Shipping Sub Title 2"
       },
       {
        "type": "text",
        "id": "shipping_main_text_3",
        "label": "Shipping Main Title 3",
        "default": "Shipping Main Title 3"
       },
       {
        "type": "text",
        "id": "shipping_sub_text_3",
        "label": "Shipping Sub Title 3",
