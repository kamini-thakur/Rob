<script>
  $(document).ready(function() {
    var dd = $('.single-option-selector');
    customizer();
    dd.on('change', function(e) {
      customizer();
    });
  });
  
  function customizer() {
    var dd = $('.single-option-selector'),
        c = $('.product-customizer-options');
    if (dd.length == 0) return;
    
    if(dd.val() == "Yes") {
      c.fadeIn(500);
    } else {
      c.hide();
    }
  }
</script>
      
